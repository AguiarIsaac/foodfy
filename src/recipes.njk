{% extends "layout.njk" %}

{% block head %}
    <title>Foddfy - Receitas</title>
{% endblock %}

{% block content %}             
    <div class="title_cards">
        <h2>Receitas</h2>
    </div>

    <section class="cards">
        {% for item in items %}
            <div class="card" id="{{item.id}}">
                <div class="card_image-container">
                    <img src="{{item.image}}" alt="{{item.title}}">
                </div>

                <div class="card_title" id="{{item.title}}">
                    <h4>{{item.title}}</h4>
                </div>

                <div class="card_author">
                    <p>{{item.author}}</p>
                </div>
            </div>
        {%endfor%}
    </section>
{% endblock%}

{% block modal %}
    <div class="modal-overlay"> 
        <div class="modal">
            <div class="modal-content">
                <div class="modal-image">
                    <img src="../public/assets/hamburguer.png" alt="item">
                </div>

                <div class="modal-title">
                    <h4>Triplo bacon burger</h4>
                </div>

                <div class="modal-author">
                    <p>Por Jorge Relato</p>
                </div>
            </div>

            <div class="close-modal">
                <a><p>Fechar modal</p></a>
            </div>
        </div>
    </div>
{% endblock %}