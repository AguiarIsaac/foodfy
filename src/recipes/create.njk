{% extends "recipes/layout.njk" %}

{% block content %}
    <form action="/admin/recipes/create" method="POST">
        <div class="title-form">
            <div>Criando Receita</div>
        </div>

        <div class="item-group">
            <div class="item">
                <div>Titulo da receita</div>
                <input type="text" name="title">
            </div>

            <div class="item">
                <div>Autor</div>
                <input type="text" name="author">
            </div>
        </div>

        <div class="item">
            <div>Imagem da receita</div>
            <input type="url" name="image_url" placeholder="https://">
        </div>

        <div class="item">
            <div>ingredientes</div>
            <input type="text" name="ingredients" placeholder="Ingredientes">
        </div>
        {# <button type="submit" class="add-ingredient">Adicionar ingrediente</button> #}

        <div class="item">
            <div>Modo de Preparo</div>
            <input type="text" name="methods" placeholder="Passos">
        </div>
        {# <button type="submit" class="add-methods">Adicionar Novo passo</button> #}

        <div class="item">
            <div>Informações adicionais</div>
            <input type="text" name="info" style="height: 260px">
        </div>

        <button type="submit">Salvar receita</button>
    </form>
    
{% endblock %}